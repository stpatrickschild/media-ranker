<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class="app-header__header">
    <h1>
      <%= link_to 'Media Ranker', root_path %>
     
      <small>Ranking the Best of Everything</small>
    </h1>

    <nav class="app-header__nav">
      <ul class="nav app-header__site-nav-container">
        <li class="nav-item app-header__nav_item">
         
          <%= link_to 'View top media', root_path, class:"nav-link" %>
        </li>
        <li class="nav-item app-header__nav_item">
        <%= link_to 'View all media', works_path, class:"nav-link"  %>
        
        </li>
        <li class="nav-item app-header__nav_item">
        <%= link_to 'Add a new work', new_work_path, class:"nav-link" %>
          
        </li>
        <li class="nav-item app-header__nav_item">
        <%= link_to 'View all user', users_path, class:"nav-link" %>
           
        </li>
      </ul>
      <ul class="nav app-header__user-nav-container">
      <% if @current_user.nil? %>
        <li class="nav-item app-header__nav_item">
        <%= link_to 'Log In', login_path, class:"btn btn-primary" %> 
        </li>
        <% else %>
        <li class="nav-item app-header__nav_item">
        
          <%= link_to "Logged in as #{@current_user.name}", user_path(@current_user), class:"btn btn-primary" %>
        </li>
        <li class="nav-item app-header__nav_item">
        <%= link_to 'Log out', logout_path, method: :post, class:"btn btn-primary" %>
        </li>
        <% end %>
         
        

      </ul>
    </nav>
  </header>
   <section class="alert__container">
      <% flash.each do |name, message| %>
      <div class="alert alert-<%=name%>">
        <span><%= message%></span>
          <!--<ul>
                <li>title: can't be blank</li>
          </ul> -->
      </div>
      <% end %>
  </section>

 

  <main>
    <%= yield %>
  </main>
  </body>
</html>
