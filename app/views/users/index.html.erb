  <main>
    <h2>List of Users</h2>
  <table class="table">
    <thead>
        <tr>  
          <th>Username</th>
          <th>Votes</th>
          <th>Joined</th>
        </th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user.username, user_path(user.id) %>
          </td>
          <td><%= user.votes.count %></td>
          <td><%= user.joined_date.strftime("%B %e, %Y") %></td>
        </td>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Back to media list', root_path, class:"btn btn-secondary" %>
</main>


  