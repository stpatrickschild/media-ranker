<%= form_with model: work do |form| %>
<%#select("post", "person_id", Person.all.collect {|p| [ p.name, p.id ] }%>
  

  <div class="form-group">
    <%= form.label :category %>
    <%= form.select :category, Category.all.collect {|c| [c,c]}, {}, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :creator %>
    <%= form.text_field :creator, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :publication_year %>
    <%= form.text_field :publication_year, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class:"form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
