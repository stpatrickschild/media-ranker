
<h4><%=table_heading%></h4>

<table>
  <thead>
    <tr>
     
      <th>Title</th>
      <th>Created By</th>
      <th>Published</th>
    
      
    </tr>
  </thead>

  <tbody>
    
    <% works.each do |work| %>
      <tr>
        
        <td><%= link_to work.title,  work_path(work)%></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
       
       
      </tr>
    <% end %>
  </tbody>
</table>